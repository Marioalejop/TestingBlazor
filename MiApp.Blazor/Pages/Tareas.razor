@page "/tareas"

<h3>Tareas</h3>

<p>@mensaje</p>

<button @onclick="AgregarTarea">Agregar tarea</button>

@code {
    // Variables públicas para que el test pueda acceder
    public string mensaje = "Sin tareas";
    public List<string> listaTareas = new();

    // Método público que modifica el estado
    public void AgregarTarea()
    {
        listaTareas.Add("Nueva tarea");
        mensaje = $"Total tareas: {listaTareas.Count}";
    }
}